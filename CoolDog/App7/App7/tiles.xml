<?xml version="1.0" encoding="utf-8" ?>

<tile>
  <visual>

    <binding template="TileSmall">
      <image src="ms-appx:///Assets/food2.jpg" hint-removeMargin="true"/>
    </binding>

    <binding template="TileMedium">
      <text hint-style="subtitle">Medium</text>
      <text hint-style="captionSubtle"></text>
    </binding>

    <binding template="TileWide">
      <group>
        <subgroup hint-weight="1">
          <text hint-style="subtitle">Wide</text>
          <text hint-style="captionSubtle"></text>
        </subgroup>
        <subgroup hint-weight="1">
          <image src="ms-appx:///Assets/food3.jpg" hint-removeMargin="true"/>
        </subgroup>
      </group>
    </binding>

    <binding template="TileLarge">
      <text hint-style="subtitle">Large</text>
      <text hint-style="captionSubtle"></text>
      <image src="ms-appx:///Assets/food1.jpg" hint-crop="circle"/>
    </binding>

  </visual>
</tile>
